<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_c1_c1d_corners_50dp_selector"
            android:gravity="center"
            android:minHeight="@dimen/dimen_44dp"
            android:onClick="goViewPagerFragment"
            android:text="Fragment in ViewPager"
            android:textColor="@color/color_g7"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/color_c1_c1d_corners_50dp_selector"
            android:gravity="center"
            android:minHeight="@dimen/dimen_44dp"
            android:onClick="goManagerFragment"
            android:text="FmManager manage Fragments"
            android:textColor="@color/color_g7"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/color_c1_c1d_corners_50dp_selector"
            android:gravity="center"
            android:minHeight="@dimen/dimen_44dp"
            android:onClick="goXmlFragment"
            android:text="Fragment in Xml"
            android:textColor="@color/color_g7"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/color_c1_c1d_corners_50dp_selector"
            android:gravity="center"
            android:minHeight="@dimen/dimen_44dp"
            android:onClick="goObjectAnim"
            android:text="Property anim"
            android:textColor="@color/color_g7"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
